<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:id="@+id/mylapakIV"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.35"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mylapakNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:overScrollMode="ifContentScrolls"
                android:text="WKZWKZ - TestUpload"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/mylapakPriceTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:text="Rp 5.000.000,-" />

            <TextView
                android:id="@+id/mylapakStockTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:text="50 remaining" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_weight="0.65"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/mylapakRatingTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating: 4.4"
                android:gravity="center_horizontal"/>

            <RatingBar
                android:id="@+id/mylapakRB"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:numStars="5" />

            <TextView
                android:id="@+id/mylapakUserCountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500 view"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/mylapakInterestCountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100 interested" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.23"
        android:paddingTop="@dimen/margin_standard"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mylapakConditionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condition: New"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/mylapakDescriptionPlaceholderTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textAppearance="@android:style/TextAppearance.Medium"/>

            <TextView
                android:id="@+id/mylapakDescriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Put description here"
                android:layout_margin="7dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="BUY"
        android:textColor="@android:color/white"
        android:id="@+id/actionButton"/>
</LinearLayout>